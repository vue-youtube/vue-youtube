{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@vue-youtube/component": [
        "./packages/component/src/index.ts"
      ],
      "@vue-youtube/core": [
        "./packages/core/src/index.ts"
      ],
      "@vue-youtube/shared": [
        "./packages/shared/src/index.ts"
      ],
    }
  },
  "include": [
    "packages",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
