{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@vue-youtube/shared": [
                "./packages/shared/index.ts"
            ],
            "@vue-youtube/core": [
                "./packages/core/index.ts"
            ],
            "@vue-youtube/shared/*": [
                "./packages/shared/*"
            ],
            "@vue-youtube/core/*": [
                "./packages/core/*"
            ],
        }
    },
    "include": [
        "packages"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
    ]
}